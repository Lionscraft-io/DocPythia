# Docker Compose Environment Configuration for DocsAI
# Copy this to .env.local and customize for your local setup

# Application Port (host machine)
APP_PORT=3762

# Admin Authentication
ADMIN_TOKEN=docsai_admin_secure_token_change_me

# Widget Domain (use localhost for local development)
WIDGET_DOMAIN=http://localhost:3762
VITE_WIDGET_DOMAIN=http://localhost:3762

# Scheduler Configuration (set to true to enable automated scraping)
SCHEDULER_ENABLED=false
CRON_SCHEDULE=0 2 * * *
SCRAPE_LIMIT=100
ANALYSIS_LIMIT=50

# Zulip Configuration (optional - required for scraping)
ZULIP_CHANNEL=community-support
ZULIP_BOT_EMAIL=
ZULIP_API_KEY=
ZULIP_SITE=https://example.zulipchat.com

# Google Gemini AI (optional - required for analysis)
GOOGLE_AI_API_KEY=
GEMINI_API_KEY=

# OpenAI (optional - alternative to Gemini)
OPENAI_API_KEY=

# Chat Integration (optional)
CHAT_ENABLED=false
EXPERT_ID=5
CHAT_ENDPOINT=
