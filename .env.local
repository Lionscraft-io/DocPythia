# Docker Compose Environment Configuration for NearDocsAI
# Local development setup

# Application Port (host machine)
APP_PORT=5454

# Admin Authentication
ADMIN_TOKEN=neardocs_admin_secure_token_12345

# Widget Domain (use localhost for local development)
WIDGET_DOMAIN=http://localhost:5454
VITE_WIDGET_DOMAIN=http://localhost:5454

# Scheduler Configuration (disabled for now)
SCHEDULER_ENABLED=false
CRON_SCHEDULE=0 2 * * *
SCRAPE_LIMIT=100
ANALYSIS_LIMIT=50

# Zulip Configuration (optional - add your credentials to enable scraping)
ZULIP_CHANNEL=community-support
ZULIP_BOT_EMAIL=
ZULIP_API_KEY=
ZULIP_SITE=https://near.zulipchat.com

# Google Gemini AI (optional - add your API key to enable analysis)
GOOGLE_AI_API_KEY=
GEMINI_API_KEY=

# OpenAI (optional - alternative to Gemini)
OPENAI_API_KEY=

# Chat Integration (optional)
CHAT_ENABLED=false
EXPERT_ID=5
CHAT_ENDPOINT=
